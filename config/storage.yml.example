version: "1.0.0"
storage:
  default_backend: "local"
  backends:
    local:
      name: "local"
      type: "filesystem"
      base_path: "/storage"
      permissions: "0755"
    
    # Example S3 configuration
    # s3:
    #   name: "s3"
    #   type: "s3"
    #   endpoint: "https://s3.amazonaws.com"
    #   region: "us-east-1"
    #   bucket: "my-rendiff-bucket"
    #   access_key: "${AWS_ACCESS_KEY_ID}"
    #   secret_key: "${AWS_SECRET_ACCESS_KEY}"
    #   path_style: false
    
    # Example Azure configuration
    # azure:
    #   name: "azure"
    #   type: "azure"
    #   account_name: "mystorageaccount"
    #   container: "rendiff"
    #   account_key: "${AZURE_STORAGE_KEY}"
    
    # Example GCS configuration
    # gcs:
    #   name: "gcs"
    #   type: "gcs"
    #   project_id: "my-project-id"
    #   bucket: "my-rendiff-bucket"
    #   credentials_file: "/config/gcp-key.json"
    
    # Example NFS configuration
    # nfs:
    #   name: "nfs"
    #   type: "network"
    #   protocol: "nfs"
    #   server: "192.168.1.100"
    #   export: "/exports/rendiff"
    #   mount_options: "rw,sync,hard,intr"
  
  policies:
    input_backends: ["local"]
    output_backends: ["local"]
    retention:
      default: "7d"
      input: "30d"
      output: "7d"
    cleanup:
      enable: true
      schedule: "0 2 * * *"  # Daily at 2 AM
      max_age: "30d"
    quotas:
      max_total_size: "100GB"
      max_file_size: "10GB"
      max_files_per_job: 100